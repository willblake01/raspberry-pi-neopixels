{
  "name": "raspberry-pi-neopixels",
  "version": "1.0.0",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/willblake01/raspberry-pi-neopixels"
  },
  "engines": {
    "node": ">=24 <25",
    "npm": ">=10"
  },
  "engineStrict": true,
  "type": "module",
  "description": "LED effects engine for Raspberry Pi using ws281x and TypeScript",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "node --loader ts-node/esm src/index.ts",
    "start": "node dist/index.js",
    "start:root": "sudo env \"PATH=$PATH\" node dist/index.js",
    "test": "jest"
  },
  "dependencies": {
    "prompts": "^2.4.2"
  },
  "optionalDependencies": {
    "rpi-ws281x": "^1.0.37"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/prompts": "^2.4.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "jest-environment-node": "^29.7.0",
    "@types/jest": "^29.5.11"
  }
}